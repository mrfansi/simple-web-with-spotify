generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING") // Used for migrations
}

model SpotifyToken {
  id           Int      @id @default(autoincrement())
  accessToken  String?
  refreshToken String?
  expiresAt    DateTime?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@map("spotify_tokens")
  @@index([expiresAt])
}

model MusicSetting {
  id        Int       @id @default(autoincrement())
  type      MusicType?
  uri       String?   // spotify:track:..., spotify:playlist:..., spotify:album:...
  autoplay  Boolean   @default(true)
  loop      Boolean   @default(false)
  updatedAt DateTime  @updatedAt

  @@map("music_settings")
  @@index([updatedAt])
}

enum MusicType {
  TRACK
  PLAYLIST
  ALBUM
}
